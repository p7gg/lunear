{
	"name": "lunear",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"build": "remix vite:build",
		"dev": "bun run dev:local-replica",
		"dev:local": "bun run --bun ./server/index.ts --db local",
		"dev:local-replica": "bun run --bun ./server/index.ts --db local-replica",
		"dev:remote": "bun run --bun ./server/index.ts --db remote",
		"start": "bun run start:local-replica",
		"start:local": "NODE_ENV=production bun run --bun ./server/index.ts --db local",
		"start:local-replica": "NODE_ENV=production bun run --bun ./server/index.ts --db local-replica",
		"start:remote": "NODE_ENV=production bun run --bun ./server/index.ts --db remote",
		"migrations:generate": "drizzle-kit generate",
		"migrations:run": "drizzle-kit migrate",
		"migrations:push": "drizzle-kit push",
		"docker:build": "docker build -t lunear .",
		"docker:run": "docker run --rm -d -p 3000:3000 --env-file .env lunear",
		"typecheck": "bunx --bun tsc",
		"update-deps": "bunx taze -I",
		"fmt:check": "biome format .",
		"fmt:fix": "biome format --write .",
		"lint:check": "biome lint .",
		"lint:fix": "biome lint --write .",
		"lint:unsafe": "biome check --unsafe .",
		"check": "biome check .",
		"fix": "biome check --write .",
		"unsafe": "biome check --write --unsafe .",
		"knip": "bunx --bun knip"
	},
	"dependencies": {
		"@conform-to/react": "^1.2.1",
		"@conform-to/zod": "^1.2.1",
		"@epic-web/client-hints": "^1.3.3",
		"@epic-web/invariant": "^1.0.0",
		"@libsql/client": "^0.11.0",
		"@lucia-auth/adapter-drizzle": "^1.1.0",
		"@paralleldrive/cuid2": "^2.2.2",
		"@radix-ui/react-avatar": "^1.1.0",
		"@radix-ui/react-checkbox": "^1.1.1",
		"@radix-ui/react-dialog": "^1.1.1",
		"@radix-ui/react-dropdown-menu": "^2.1.1",
		"@radix-ui/react-label": "^2.1.0",
		"@radix-ui/react-popover": "^1.1.1",
		"@radix-ui/react-progress": "^1.1.0",
		"@radix-ui/react-radio-group": "^1.2.0",
		"@radix-ui/react-scroll-area": "^1.1.0",
		"@radix-ui/react-select": "^2.1.1",
		"@radix-ui/react-separator": "^1.1.0",
		"@radix-ui/react-slot": "^1.1.0",
		"@radix-ui/react-switch": "^1.1.0",
		"@radix-ui/react-tabs": "^1.1.0",
		"@radix-ui/react-toast": "^1.2.1",
		"@radix-ui/react-toggle": "^1.1.0",
		"@radix-ui/react-toggle-group": "^1.1.0",
		"@radix-ui/react-tooltip": "^1.1.2",
		"@remix-run/express": "^2.12.0",
		"@remix-run/node": "^2.12.0",
		"@remix-run/react": "^2.12.0",
		"@tiptap/extension-text-align": "^2.6.6",
		"@tiptap/pm": "^2.6.6",
		"@tiptap/react": "^2.6.6",
		"@tiptap/starter-kit": "^2.6.6",
		"cmdk": "1.0.0",
		"compression": "^1.7.4",
		"cva": "^1.0.0-beta.1",
		"drizzle-orm": "^0.33.0",
		"express": "^4.21.0",
		"intl-parse-accept-language": "^1.0.0",
		"isbot": "^5.1.17",
		"lucia": "^3.2.0",
		"morgan": "^1.10.0",
		"oslo": "^1.2.1",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"remix-toast": "^1.2.1",
		"remix-utils": "^7.6.0",
		"tailwind-merge": "^2.5.2",
		"tailwindcss-animate": "^1.0.7",
		"vaul": "^0.9.3",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.1",
		"@remix-run/dev": "^2.12.0",
		"@tailwindcss/typography": "^0.5.15",
		"@types/bun": "^1.1.9",
		"@types/compression": "^1.7.5",
		"@types/morgan": "^1.9.9",
		"@types/react": "^18.3.5",
		"@types/react-dom": "^18.3.0",
		"autoprefixer": "^10.4.20",
		"drizzle-kit": "^0.24.2",
		"postcss": "^8.4.47",
		"remix-flat-routes": "^0.6.5",
		"tailwindcss": "^3.4.11",
		"type-fest": "^4.26.1",
		"typescript": "^5.6.2",
		"vite": "^5.4.5",
		"vite-tsconfig-paths": "^5.0.1"
	},
	"engines": {
		"node": ">=22.0.0"
	}
}
